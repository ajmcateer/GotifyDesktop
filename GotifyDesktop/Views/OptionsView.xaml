<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GotifyDesktop.Views.OptionsView"> 
  <Grid 
        Width="400"
        Height="400">
  <StackPanel Height="30" Orientation="Horizontal" VerticalAlignment="Top">
    <TextBlock Text="Theme" Margin="25,0,0,0" VerticalAlignment="Center"/>
    <DropDown Margin="5" Width="100" Items="{Binding Themes}" SelectedItem="{Binding SelectedTheme}"/>
  </StackPanel>
  </Grid>
</UserControl>
