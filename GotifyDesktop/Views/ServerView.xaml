<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GotifyDesktop.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GotifyDesktop.Views.ServerView">

  <UserControl.Styles>
    <Style Selector="ListBoxItem">
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
      <Setter Property="VerticalContentAlignment" Value="Stretch"/>
      <Setter Property="Margin" Value="0"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
    </Style>
    <Style Selector="Button.toolbar">
      <Setter Property="Margin" Value="9,3,9,3"/>
      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Padding" Value="6"/>
    </Style>
    <Style Selector="Button.toolbar /template/ ContentPresenter">
      <Setter Property="CornerRadius" Value="20"/>
    </Style>
    <Style Selector="Button:pointerover.toolbar /template/ ContentPresenter">
      <Setter Property="Background" Value="#80e0e0e0"/>
    </Style>
  </UserControl.Styles>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="150" MinWidth="150"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
      <local:AlertMessageView
        DataContext="{Binding AlertMessageViewModel}"
        IsVisible="{Binding IsDisplayVisible, FallbackValue=false}"
        DockPanel.Dock="Top">
      </local:AlertMessageView>
      <ListBox
        DockPanel.Dock="Left"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        MinWidth="150"
        SelectionMode="Single"
        SelectedItem="{Binding SelectedItem}"
        BorderThickness="0"
        Grid.Row="0"
        Grid.RowSpan="2"
        Grid.Column="0"
        Items="{Binding Applications}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Button Background="Transparent"
                    IsHitTestVisible="False"
                    Height="40"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    HorizontalContentAlignment="Stretch">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="1*"/>
                  <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <Image
                  Source="avares://GotifyDesktop/Assets/Alert-Light.ico"
                  Height="16"
                  Width="16"
                  DockPanel.Dock="Right"
                  Margin="5"
                  Grid.Column="1"
                  IsVisible="{Binding HasAlert}"
                  HorizontalAlignment="Right"/>
              <TextBlock
                x:Name="MyTextBlock"
                Height="30"
                Margin="0,5,0,0"
                FontSize="20"
                Text="{Binding Name}"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"/>
              </Grid>
            </Button>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
      <Button Content="Settings"
                Command="{Binding ShowSettings}"
                DockPanel.Dock="Bottom"
                Background="#2B2B2B"
                MinWidth="150"
                BorderThickness="0"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalContentAlignment="Center"/>
      <GridSplitter Grid.Column="1" 
                    Grid.RowSpan="2"
                    Width="2"></GridSplitter>
      <ScrollViewer Grid.Column="2" 
                    Grid.Row="0"
                    Grid.RowSpan="2">
        <ItemsControl
            Items="{Binding MessageModels}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border HorizontalAlignment="Center"
                Background="#424242"
                MinWidth="600"
                BoxShadow="1 1 1 1 Black"
                MaxWidth="600"
                Margin="10"
                BorderThickness="2"
                CornerRadius="3"
                Padding="4">
                <Grid MinHeight="80">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="64"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="5"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                  </Grid.RowDefinitions>
                  <Image Source="avares://GotifyDesktop/Assets/defaultapp.png"
                         Grid.Column="1"
                         Grid.Row="1"
                         Grid.RowSpan="2"
                         Height="64"
                         Width="64"
                         DockPanel.Dock="Left">
                  </Image>
                  <TextBlock
                    Grid.Column="2"
                    Grid.Row="1"
                    Height="32"
                    TextWrapping="Wrap"
                    FontSize="18"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="{Binding Title}"/>
                  <TextBlock
                    Grid.Column="2"
                    Grid.Row="2"
                    Margin="15,0,0,0"
                    DockPanel.Dock="Bottom"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Text="{Binding Message}"/>
                  <TextBlock
                    Grid.Column="3"
                    Grid.Row="1"
                    Margin="15,0,0,0"
                    DockPanel.Dock="Right"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Text="{Binding DateString}"/>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
  </Grid>
</UserControl>
