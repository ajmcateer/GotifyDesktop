  <SplitView Name="SplitView"
              PanePlacement="Left"
              OpenPaneLength="200"
              CompactPaneLength="50"
              DisplayMode="CompactInline">
    <!--DisplayMode="{Binding CurrentDisplayMode}">-->
    <SplitView.Pane>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
