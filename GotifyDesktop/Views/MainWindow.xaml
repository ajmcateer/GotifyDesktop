          Margin="5,12,5,0"
          Background="Transparent"
          ScrollViewer.VerticalScrollBarVisibility="Disabled"
          SelectionMode="Single"
          SelectedItem="{Binding SelectedServer}"
          BorderThickness="0"
          Grid.Row="1"
          Items="{Binding Servers}">
